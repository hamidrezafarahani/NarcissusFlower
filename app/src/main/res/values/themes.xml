<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NarcissusFlower" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/yellow_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/green_700</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="android:colorBackground">@color/green_500</item>
    </style>

    <style name="Theme.NarcissusFlower" parent="Base.Theme.NarcissusFlower" />

    <style name="Theme.NarcissusFlower.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NarcissusFlower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.NarcissusFlower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>